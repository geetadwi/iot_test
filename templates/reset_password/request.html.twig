{% extends 'base.html.twig' %}
  {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
      {{ encore_entry_link_tags('admin') }}
  {% endblock %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="page-auth">
        {{ include('reset_password/_header.html.twig') }}

        <div class="content">
            <div class="container">
                <div class="card card-auth">
                    <div class="card-body text-center">
                        <div class="mb-5">
                            <object type="image/svg+xml"
                                    data="{{ asset("assets/svg/forgot_password.svg") }}" class="w-50"
                                    aria-label="svg image"></object>
                        </div>
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                        <div class="card-title">{{ "Réinitialiser votre mot de passe"|trans }}</div>
                        <div
                            class="card-text mb-5">{{ "Saisissez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe."|trans }}
                        </div>

                        {{ form_start(requestForm) }}
                        <div class="row g-2">
                            <div class="col-sm-8">
                                <input name="{{ field_name(requestForm.email) }}"
                                       value="{{ field_value(requestForm.email) }}" class="form-control" type="text"
                                       placeholder={{ "Saisir votre adresse e-mail"|trans }}/>
                            </div>
                            <div class="col-sm-4">
                                <button class="btn btn-primary" type="submit">{{ "Réinitialiser"|trans }}</button>
                            </div>
                        </div>
                        {{ form_end(requestForm) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
